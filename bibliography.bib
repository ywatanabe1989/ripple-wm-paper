	author = {Buzsáki, György},
	year = {2015},
	note = {\_eprint: https://onlinelibrary.wiley.com/doi/pdf/10.1002/hipo.22488},
	keywords = {epilepsy, imagining, learning, memory, planning},
	pages = {1073--1188},
	file = {Full Text PDF:C\:\\Users\\wyusu\\Zotero\\storage\\X86YSRYF\\Buzsáki - 2015 - Hippocampal sharp wave-ripple A cognitive biomark.pdf:application/pdf;Snapshot:C\:\\Users\\wyusu\\Zotero\\storage\\GPCUM9IC\\hipo.html:text/html},
